    android:layout_height="match_parent"
    android:background="@drawable/bg1" >

    <TextView
        android:id="@+id/tv_one_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:paddingLeft="50dp"
        android:textSize="40sp"
        android:textColor="@color/primary_text_dark_color"
        android:text="构想"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_one_idea"
        android:layout_toRightOf="@id/tv_one_idea"
        android:paddingLeft="16dp"
        android:textSize="20sp"
        android:textColor="@color/secondary_text_dark_color"
        android:text="孵化..."/>

</RelativeLayout>