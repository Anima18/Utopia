<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todayTaskList_layout"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/selectable_item_background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center">
    <TextView
        android:id="@+id/todayTaskList_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_dark_color"
        android:layout_alignParentRight="true"
        android:text="22:58:30"
        />

    <ImageView
        android:id="@+id/todayTaskList_time_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/todayTaskList_time_tv"
        android:src="@drawable/ic_clock"/>

    <TextView
        android:id="@+id/todayTaskList_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf ="@id/todayTaskList_time_iv"
        android:textColor="@color/primary_text_dark_color"
        android:textSize="16sp"
        android:singleLine="true"
        android:text="11111111111111111111111111"/>


    <TextView
        android:id="@+id/todayTaskList_quadrant_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/todayTaskList_title_tv"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_dark_color"
        android:paddingTop="3dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/todayTaskList_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/todayTaskList_title_tv"
        android:layout_toRightOf="@id/todayTaskList_quadrant_tv"
        android:textSize="14sp"
        android:textColor="@color/secondary_text_dark_color"
        android:paddingTop="3dp"
        android:singleLine="true"/>

</RelativeLayout>